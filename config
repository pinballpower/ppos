#!/bin/bash

cd `dirname $0`

if [ "$1" == "" ]; then
 VERSION=`cat .piversion`
 echo No version given, assuming Pi$VERSION
else
 VERSION=$1
fi

if [ "$BRSRCDIR" == "" ]; then
 BRSRCDIR=buildroot
fi

BRDIR=`./brdir $VERSION`
echo "Configuring in $BRDIR"
cd `dirname $0`
cd $BRSRCDIR
make O=$BRDIR BR2_EXTERNAL=../brext menuconfig
